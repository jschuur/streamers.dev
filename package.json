{
  "name": "streamers.dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev-update:channels": "while true; do npm run update:channels; sleep 600; done",
    "dev-update:channels:full": "while true; do sleep 1800; npm run update:channels:full; done",
    "dev-update:snapshots": "while true; do npm run update:snapshots; sleep 1200; done",
    "dev-next": "next dev",
    "dev": "concurrently \"npm:dev-*\"",
    "debug": "NODE_OPTIONS='--inspect' next dev",
    "build": "next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "dev:update": "concurrently \"npm run dev\" \"npm run dev:update:channels\"",
    "update:channels": "babel-node util/updateAllChannels.js",
    "update:channels:localtest": "babel-node util/updateAllChannels.js --localTest",
    "update:snapshots": "babel-node util/generateSnapshots.js",
    "update:snapshots:prod": "dotenv -e .env.production babel-node util/generateSnapshots.js",
    "update:channels:full": "babel-node util/updateAllChannels.js --fullDetails",
    "update:channels:prod": "dotenv -e .env.production babel-node util/updateAllChannels.js",
    "update:channels:prod:full": "dotenv -e .env.production babel-node util/updateAllChannels.js -- --fullDetails",
    "deploy": "[[ `git symbolic-ref --short -q HEAD` = 'main' ]] && git checkout production && git merge main && git push && git checkout main",
    "deploy:backend": "ssh node 'cd streamers.dev && npm run update:backend'",
    "update:backend": "git checkout backend && git reset --hard && git pull && npm install",
    "find:channels": "babel-node util/findChannels.js",
    "find:channels:prod": "dotenv -e .env.production babel-node util/findChannels.js",
    "studio": "prisma studio",
    "migrate:prod": "dotenv -e .env.production -- prisma migrate deploy",
    "db:dump:local": "pg_dump -d streamersdev -Fc -f tmp/dbdump_local_`date +\"%Y-%m-%d_%H:%M:%S\"`.dump",
    "db:dump:prod": "dotenv -e .env.production -- pg_dump -Fc -f tmp/dbdump_prod_latest.dump",
    "db:import:prod": "pg_restore --no-acl --no-owner --clean -d streamersdev tmp/dbdump_prod_latest.dump",
    "db:pull": "npm run db:dump:prod && npm run db:import:prod"
  },
  "dependencies": {
    "@fontsource/fira-sans-condensed": "^4.5.0",
    "@fontsource/inter": "^4.5.0",
    "@headlessui/react": "^1.4.0",
    "@heroicons/react": "^1.0.3",
    "@next-auth/prisma-adapter": "^0.5.4",
    "@prisma/client": "^2.30.3",
    "@sentry/nextjs": "^6.11.0",
    "apexcharts": "^3.28.1",
    "aws-sdk": "^2.968.0",
    "console-stamp": "^3.0.3",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "i18n-iso-countries": "^6.8.0",
    "iso-language-codes": "^1.1.0",
    "lodash": "^4.17.21",
    "minimist": "^1.2.5",
    "next": "^11.1.2",
    "next-auth": "^3.29.0",
    "next-seo": "^4.26.0",
    "next-themes": "^0.0.15",
    "pluralize": "^8.0.0",
    "pretty-ms": "^7.0.1",
    "react": "^17.0.2",
    "react-apexcharts": "^1.3.9",
    "react-country-flag": "^2.3.1",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.12.2",
    "react-hot-toast": "^2.1.0",
    "react-icons": "^4.2.0",
    "react-image": "^4.0.3",
    "react-loader-spinner": "^4.0.0",
    "react-query": "^3.19.6",
    "react-toast-notifications": "^2.5.1",
    "slugify": "^1.6.0",
    "superjson": "^1.7.5",
    "twitch": "^4.6.5",
    "twitch-auth": "^4.6.5",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/node": "^7.14.9",
    "@babel/preset-env": "^7.15.0",
    "autoprefixer": "^10.3.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-superjson-next": "^0.3.0",
    "concurrently": "^6.2.1",
    "dotenv-cli": "^4.0.0",
    "postcss": "^8.3.6",
    "prisma": "^2.30.3",
    "prisma-repl": "^1.2.0",
    "tailwindcss": "^2.2.7",
    "tailwindcss-debug-screens": "^2.1.0"
  }
}
