datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                      Int           @default(autoincrement()) @id
  twitchId                String        @unique
  name                    String        @unique
  displayName             String        @unique
  fullName                String?
  team                    String?
  description             String
  country                 String?
  country2                String?
  isLive                  Boolean       @default(false)
  isHidden                Boolean       @default(false)
  isPaused                Boolean       @default(false)

  topics                  String[]

  type                    String?
  broadcasterType         String
  channelType             ChannelType   @default(USER)
  creationDate            DateTime
  profilePictureUrl       String        @unique
  views                   Int

  lastOnline              DateTime?
  latestStreamTitle       String?
  latestStreamStartedAt   DateTime?
  latestStreamViewers     Int?
  latestStreamLanguage    String?
  latestStreamGameName    String?

  // TODO: Create Links model
  homepage                String?
  youtube                 String?
  twitter                 String?
  github                  String?
  discord                 String?
  instagram               String?

  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt
}

enum ChannelType {
  USER
  BRAND
  SHOW
  COLLABORATION
}

model Snapshot {
  id                      Int           @default(autoincrement()) @id
  type                    SnapshotType
  value                   Int
  timeStamp               DateTime

  @@unique([type, timeStamp])
}

enum SnapshotType {
  PEAKVIEWERS
  TRACKEDUSERS
}

